<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    >

    <TextView
        android:id="@+id/blabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="PRIJAVA:"
        android:textSize="30dp" />

    <!--
    <Button
        android:id="@+id/btnStuden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="243dp"
        android:text="Student" />
        -->

    <ImageButton
        android:id="@+id/btnProfesor"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="105dp"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@+id/blabla"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/ic_proffesors" />
    <TextView
        android:id="@+id/txtProfesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profesor"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnProfesor"/>

    <ImageButton
        android:id="@+id/btnStudent"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/txtProfesor"
        android:src="@drawable/ic_students" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnStudent"/>

