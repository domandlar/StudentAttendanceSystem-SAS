<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/danOdrzavanja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ponedjeljak"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewVrijeme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00 - 12:00"
                android:layout_toEndOf="@+id/danOdrzavanja"
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewDvorana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dvorana 5"
                android:layout_below="@+id/danOdrzavanja"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewPredbiljezenoTekst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PredbiljeÅ¾eno: "
                android:layout_below="@+id/textViewDvorana"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewPredbiljezeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/30"
                android:layout_below="@+id/textViewDvorana"
                android:layout_toEndOf="@+id/textViewPredbiljezenoTekst"
                android:textStyle="bold"/>
            <CheckBox
                android:id="@+id/chcboxOdabir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>